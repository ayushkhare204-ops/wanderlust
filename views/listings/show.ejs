<% layout("layouts/boilerplate")  %>
<div class="row">
    <div class="col-8 offset-3 mt-2">
    <h3><%= hotel.title %></h3>
</div>
<div class="card col-6 offset-3 listing-card">
    <img src="<%= hotel.image.url%>" class="card-img-top show-img" alt="...">
  <div class="card-body">
    <p class="card-text">
    <%= hotel.description%><br>
    &#8377 <%= hotel.price.toLocaleString("en-IN") %><br>
    <%= hotel.location %><br>
    <%= hotel.country%>   <br>
    </p>
  </div>
</div>


<div class="btns">
         
   <a href="/listings/<%= hotel._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn" > Edit </a>

<form action="/listings/<%= hotel._id %>?_method=DELETE" method="Post" >
        
        <button  class="btn btn-dark offset-5">Delete</button>
    </form>
</div>   


<!-- //Review -->

<div class="col-8 offset-3 mt-2 mb-3">
<hr>
  <h4>Leave a Review!</h4>

  <form action="/listings/<%= hotel._id %>/reviews" method="post" novalidate class="needs-validation">
  <div class="mb-3 mt-3">
    <label for="rating" class="form-label">Rating</label>
    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
  </div>
  <div class="mb-3 mt-3">
    <label for="coment" class="form-label">Comments</label>
    <textarea id="comment" name="review[comment]" cols="30" row="5" class="form-control" required></textarea>
  <div class="invalid-feedback">Please write a comment.</div>
  </div>
  <button>Submit</button>
  </form>
<hr>


<p><b>All reviews</b></p>
<div class="row">
<%for(review of hotel.reviews){%>
<div class="card col-5 ms-3 mb-3">
<div class="card-body">

      <h5 class="card-title">Card title</h5>
      <p class="card-text"><%=review.comment%></p>
      <p class="card-text"><%=review.rating%> Stars</p>


</div>
</div>
<%}%>
</div>




</div>


</div>   


